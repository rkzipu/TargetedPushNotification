<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bongo.pushservice.MainActivity"
    tools:showIn="@layout/activity_main">
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/tvCountry"
            android:layout_margin="20dp"
            android:hint="country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_margin="20dp"
            android:layout_below="@+id/tvCountry"
            android:id="@+id/tvUserType"
            android:hint="user type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_margin="20dp"
            android:layout_below="@+id/tvUserType"
            android:id="@+id/tvPaymentGateWay"
            android:hint="pament gatway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_margin="20dp"
            android:layout_below="@+id/tvPaymentGateWay"
            android:text="@string/note_country_code_example_bd_us_in_etc_user_type_example_trial_paid_free_etc_pament_gateway_example_stripe_digi_etisalat_etc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>